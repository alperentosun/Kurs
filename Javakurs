        function EnKucukSayiBul(sayi1,sayi2,sayi3){
            if(sayi1<sayi2 && sayi3){
                console.log(sayi1+"En küçük sayidir")
            }else if(sayi2<sayi1&&sayi3){
                console.log(sayi2+"En küçük sayidir")
            }else if(sayi3<sayi1&&sayi2){
                console.log(sayi3+"En küçük sayidir")
            }else{
                console.log("Sayilar birbirine eşittir.")
            }
        }
        EnKucukSayiBul(10,5,11);
























        

       

        
        
















